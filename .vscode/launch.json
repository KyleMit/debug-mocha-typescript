{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Mocha",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts",
                "--require",
                "ts-node/register",
                "${workspaceRoot}/src/**/*.spec.ts"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        }
    ]
}
